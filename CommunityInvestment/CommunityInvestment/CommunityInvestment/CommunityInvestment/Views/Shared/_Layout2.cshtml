@model CommunityInvestment.Models.ViewModel.FilterViewModel


@{

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - CI Platform</title>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/bootstrap/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>

   <partial name="Header" />

    <!-- Search Field -->
    <div class="container-fluid g-0">
        <nav class="navbar border-bottom navbar-expand-lg navbar-light">
            <div class="container g-0 d-flex justify-content-between" style="">


                <div class="w-50">
                    <div class="input-group search w-100 p-3">
                        <i class="bi bi-search" style="font-size: 20px; position: relative; top:10px; left: -10px; color: #757575;"></i>
                        <input type="search" id="search" style="font-size: 20px; color: #757575;" class="form-control rounded border-0" placeholder="Search mission..." aria-label="Search" aria-describedby="search-addon" />
                    </div>




                </div>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <img src="~/Assets/filter.png" alt="">
                </button>
                <div class="collapse navbar-collapse w-50 justify-content-end" style="height: 78px; position: relative;"
                     id="navbarSupportedContent1">


                    <div class="col-lg-3 outline-0 h-100 filter_item">
                        <div class="dropdown h-100 ">
                            <div class="form-select d-flex align-items-center h-100 rounded-0"
                                 type="button"
                                 id="dropdownMenuButton1"
                                 data-bs-toggle="dropdown">
                                Country
                            </div>
                            <ul class="dropdown-menu scrollable-menu w-100" role="menu"
                                id="countryFilter"
                                aria-labelledby="dropdownMenuButton1">
                                @foreach (var country in @Model.Country)
                                {
                                    var checkBoxId = "countryFilter" + country.Value;
                                    var liId = "li" + country.Text;
                                    <li id="@liId">
                                        <div class="form-check dropdown-item px-4">
                                            <input class="form-check-input mx-auto country-item countryListClass"
                                               type="checkbox"
                                               data-country-id="@country.Value" />
                                            <label class="form-check-label ps-2" for="@country.Text">
                                                @country.Text
                                            </label>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="col-lg-3 outline-0 h-100 filter_item">
                        @*City*@
                        <div class="dropdown h-100">
                            <div class="form-select d-flex align-items-center hide_dropdown_arrow hide_border_select h-100 rounded-0"
                                 type="button"
                                 id="dropdownMenuButton1"
                                 data-bs-toggle="dropdown"
                                 aria-expanded="false">
                                City
                            </div>
                            <ul class="dropdown-menu w-100 scroll_dropdown scrollable-menu" aria-labelledby="cityFilterDropdown" id="cityListFilter">
                                @* @foreach (var city in Model.City)
                                {
                                var checkBoxId = "cityFilter" + city.Value;
                                var liId = "li" + city.Text;
                                <li id="@liId">
                                <div class="form-check dropdown-item px-4">
                                <input class="form-check-input mx-auto country-item cityListClass"
                                type="checkbox"
                                data-country-id="@checkBoxId" />
                                <label class="form-check-label ps-2" for="@city.Text">
                                @city.Text
                                </label>
                                </div>
                                </li>
                                }*@
                            </ul>
                        </div>
                    </div>



                    <div class="col-lg-3 outline-0 h-100 filter_item">
                        <div class="dropdown h-100">
                            <div class="form-select d-flex align-items-center hide_border_select h-100 rounded-0"
                                 type="button"
                                 id="dropdownMenuButton1"
                                 data-bs-toggle="dropdown">
                                Skills
                            </div>
                            <ul class="dropdown-menu scrollable-menu w-100" role="menu"
                                id="themeListFilter"
                                aria-labelledby="dropdownMenuButton1">
                                @foreach (var skill in Model.Skill)
                                {
                                    var checkBoxId = "skillFilter" + skill.Value;
                                    var liId = "li" + skill.Text;
                                    <li id="@liId">
                                        <div class="form-check dropdown-item px-4">
                                            <input class="form-check-input mx-auto skill-item skillListClass"
                                               type="checkbox"
                                               data-skill-id="@skill.Value" />
                                            <label class="form-check-label ps-2" for="@skill.Text">
                                                @skill.Text
                                            </label>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="col-lg-3 outline-0 h-100 filter_item">
                        <div class="dropdown h-100">
                            <div class="form-select d-flex align-items-center hide_border_select h-100 rounded-0"
                                 type="button"
                                 id="dropdownMenuButton1"
                                 data-bs-toggle="dropdown">
                                Theme
                            </div>
                            <ul class="dropdown-menu scrollable-menu w-100" role="menu"
                                id="themeListFilter"
                                aria-labelledby="dropdownMenuButton1">
                                @foreach (var theme in Model.MissionTheme)
                                {
                                    var checkBoxId = "themeFilter" + theme.Value;
                                    var liId = "li" + theme.Text;
                                    <li id="@liId">
                                        <div class="form-check dropdown-item px-4">
                                            <input class="form-check-input mx-auto theme-item themeListClass"
                                               type="checkbox"
                                               data-theme-id="@theme.Value" />
                                            <label class="form-check-label ps-2" for="@theme.Text">
                                                @theme.Text
                                            </label>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </nav>
    </div>

    <!-- Mission Listing -->
    <div class="container con-p g-0 pr-0 pl-0">
        <div class="container-fluid d-flex flex-wrap gap-3 py-4" id="badge-container">
        </div>
    </div>
    @RenderBody()
    <div class="container-fluid g-0 pt-5 border-top">
        <div class="container text-start" style="font-size: 14px;">
            Privacy Policy
        </div>
    </div>


    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/bootstrap/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    


</body>
</html>
