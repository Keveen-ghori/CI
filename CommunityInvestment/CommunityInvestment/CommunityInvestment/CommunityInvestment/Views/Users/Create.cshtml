                    <form asp-action="Create" method="post" class="d-flex flex-wrap flex-column form row mx-2 g-2">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" placeholder="evan" class="p-3">
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                        <label asp-for="SecondName"></label>
                        <input asp-for="SecondName" placeholder="donohue" class="p-3">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" id="phone" name="phone"
                               pattern="[0-9]{3} [0-9]{3} [0-9]{4}"
                               placeholder="8923454615" class="p-3">
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        <label asp-for="Email"></label>
                        <input asp-for="Email" placeholder="evan.donohue@gmail.com" class="p-3">
                        <span class="text-danger" asp-validation-for="Email"></span>
                        <label asp-for="Password"></label>
                        <input id="Password" asp-for="Password" placeholder="**********" class="p-3">
                        <span class="text-danger" asp-validation-for="Password"></span>
                        <label>Confirm Password</label>
                        <input type="password" placeholder="**********" id="confirmPassword" class="p-3">
                        <button type="submit" class="login-btn">Register</button>
                        <span class="text-danger">@TempData["Failed"]</span>
